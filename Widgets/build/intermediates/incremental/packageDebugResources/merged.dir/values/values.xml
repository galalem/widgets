<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Button">
        <attr format="color" name="defaultGradientStartColor"/>
        <attr format="color" name="defaultGradientCenterColor"/>
        <attr format="color" name="defaultGradientEndColor"/>
        <attr format="flags" name="defaultGradientType">
            <flag name="linear" value="0x00"/>
            <flag name="radial" value="0x01"/>
            <flag name="sweep" value="0x02"/>
        </attr>
        <attr format="flags" name="defaultGradientOrientation">
            <flag name="topToBottom" value="0x01"/>
            <flag name="topRightToBottomLeft" value="0x03"/>
            <flag name="rightToLeft" value="0x02"/>
            <flag name="bottomRightToTopLeft" value="0x0a"/>
            <flag name="bottomToTop" value="0x08"/>
            <flag name="bottomLeftToTopRight" value="0x0c"/>
            <flag name="leftToRight" value="0x04"/>
            <flag name="topLeftToBottomRight" value="0x05"/>
        </attr>

        <attr format="color" name="pressedGradientStartColor"/>
        <attr format="color" name="pressedGradientCenterColor"/>
        <attr format="color" name="pressedGradientEndColor"/>
        <attr format="flags" name="pressedGradientType">
            <flag name="linear" value="0x00"/>
            <flag name="radial" value="0x01"/>
            <flag name="sweep" value="0x02"/>
        </attr>
        <attr format="flags" name="pressedGradientOrientation">
            <flag name="topToBottom" value="0x01"/>
            <flag name="topRightToBottomLeft" value="0x03"/>
            <flag name="rightToLeft" value="0x02"/>
            <flag name="bottomRightToTopLeft" value="0x0a"/>
            <flag name="bottomToTop" value="0x08"/>
            <flag name="bottomLeftToTopRight" value="0x0c"/>
            <flag name="leftToRight" value="0x04"/>
            <flag name="topLeftToBottomRight" value="0x05"/>
        </attr>
        <attr format="dimension" name="borderRadius"/>
    </declare-styleable>
</resources>